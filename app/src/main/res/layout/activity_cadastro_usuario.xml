<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo_megafone"
            android:contentDescription="Logo Feira Jovem"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- Título principal -->
        <TextView
            android:id="@+id/textCadastroUsuarioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bem-Vindo(a)"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- Subtexto -->
        <TextView
            android:id="@+id/subtextCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="preencha todos os campos para realizar seu cadastro."
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#7A7A7A"
            android:layout_marginBottom="12dp"/>

        <!-- Tabs Entrar / Cadastrar-se -->
        <LinearLayout
            android:id="@+id/tab_buttons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_entrar_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Entrar"
                android:textStyle="bold"
                android:background="#E0E0E0"
                android:minHeight="48dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_cadastrar_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cadastrar-se"
                android:textStyle="bold"
                android:minHeight="48dp"
                android:background="#DADADA"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Campos do formulário -->
        <EditText
            android:id="@+id/registerEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_selector"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/registerPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_selector"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/registerConfirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar senha"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_selector"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/registerNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_selector"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/registerSchoolEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escola"
            android:inputType="text"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_selector"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botão cadastrar -->
        <Button
            android:id="@+id/salvarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="#FF9800"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"/>

        <!-- Link esqueceu a senha -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="esqueceu a senha?"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp"/>

        <!-- Botão Sair (oculto por padrão) -->
        <Button
            android:id="@+id/sairButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:visibility="gone"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
