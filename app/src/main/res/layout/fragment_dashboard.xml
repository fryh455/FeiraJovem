<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Prévia da imagem -->
        <ImageView
            android:id="@+id/image_item"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:background="#E0E0E0"
            android:scaleType="centerInside"
            android:contentDescription="Prévia da imagem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão para selecionar a imagem -->
        <Button
            android:id="@+id/button_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carregar imagem"
            android:textColor="@android:color/white"
            android:backgroundTint="#FFA726"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/image_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo: Título do Produto -->
        <EditText
            android:id="@+id/editTituloProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Ex: Livro de Biologia - Usado"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/button_select_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo: Descrição -->
        <EditText
            android:id="@+id/editDescricaoProduto"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:hint="Descreva o seu produto com detalhes. Ex: Condição, marca, por que está vendendo, etc."
            android:gravity="top|start"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_background"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/editTituloProduto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo: Preço -->
        <EditText
            android:id="@+id/editPrecoProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Ex: 50,00"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/editDescricaoProduto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo: Local de venda -->
        <EditText
            android:id="@+id/enderecoItemEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Ex: Recreio, na biblioteca ou sala 202"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/editPrecoProduto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Spinner: Escolha da duração da postagem -->
        <Spinner
            android:id="@+id/spinnerDuracao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@id/enderecoItemEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão final: Postar Produto -->
        <Button
            android:id="@+id/salvarItemButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Postar Produto"
            android:textColor="@android:color/white"
            android:backgroundTint="#2979FF"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerDuracao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
