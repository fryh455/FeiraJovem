<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/textMotivoDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Motivo da denÃºncia"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textStatusDenuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: pendente"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/textMotivoDenuncia"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/buttonResolverDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resolver"
        android:backgroundTint="#2979FF"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textStatusDenuncia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonIgnorarDenuncia"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/buttonIgnorarDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ignorar"
        android:backgroundTint="#FF5252"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textStatusDenuncia"
        app:layout_constraintStart_toEndOf="@id/buttonResolverDenuncia"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
