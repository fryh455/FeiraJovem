<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp">

    <!-- Título do Produto -->
    <TextView
        android:id="@+id/textTituloProdutoAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título do Produto"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Descrição resumida -->
    <TextView
        android:id="@+id/textDescricaoProdutoAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrição resumida do produto..."
        android:textSize="14sp"
        android:textColor="#555555"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/textTituloProdutoAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Preço -->
    <TextView
        android:id="@+id/textPrecoProdutoAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 50,00"
        android:textStyle="bold"
        android:textColor="#2979FF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textDescricaoProdutoAdmin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Botão Remover -->
    <Button
        android:id="@+id/buttonRemoverProdutoAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover"
        app:layout_constraintTop_toBottomOf="@id/textDescricaoProdutoAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
