<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Imagem -->
        <ImageView
            android:id="@+id/imageAnuncio"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/edit_text_background" />

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Título do Produto"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Avaliação -->
        <TextView
            android:id="@+id/textAvaliacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaliação: ★★★★★ (5)"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="#555555"/>

        <!-- Tempo restante -->
        <TextView
            android:id="@+id/textTempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faltam 5 dias"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />

        <!-- Preço -->
        <TextView
            android:id="@+id/textPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0,00"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:layout_marginTop="4dp" />

        <!-- Descrição resumida -->
        <TextView
            android:id="@+id/textDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Descrição resumida do produto"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Botão Ler Mais -->
        <TextView
            android:id="@+id/textLerMais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ler mais"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Linha de botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnAvaliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avaliar"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDeletar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deletar"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
