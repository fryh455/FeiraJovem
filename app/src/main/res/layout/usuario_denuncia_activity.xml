<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textUsuarioDenunciaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Denúncia"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Campo para inserir o motivo da denúncia -->
    <EditText
        android:id="@+id/editMotivoDenuncia"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Descreva o motivo da denúncia"
        android:gravity="top|start"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/textUsuarioDenunciaTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botão para enviar denúncia -->
    <Button
        android:id="@+id/buttonEnviarDenuncia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Denúncia"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2979FF"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/editMotivoDenuncia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
