<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.login.LoginActivity">

    <!-- Logo com ícone -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo_megafone"
        android:contentDescription="Logo Feira Jovem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Texto principal do app -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEIRA\nJOVEM"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FF9800"
        app:layout_constraintTop_toBottomOf="@id/logo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o mercado escolar"
        android:textSize="16sp"
        android:textColor="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Texto de boas-vindas -->
    <TextView
        android:id="@+id/text_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo(a)"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/app_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/welcome_subtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entre ou crie a sua conta para divulgar e encontrar produtos escolares."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#7A7A7A"
        app:layout_constraintTop_toBottomOf="@id/text_login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botões de navegação: Entrar / Cadastrar -->
    <LinearLayout
        android:id="@+id/tab_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/welcome_subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_entrar_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:background="#DADADA"
            android:text="Entrar"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_cadastrar_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:background="#EDEDED"
            android:text="Cadastrar-se"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Formulário agrupado para evitar sobreposição -->
    <LinearLayout
        android:id="@+id/login_form_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tab_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Campo de Email -->
        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Email"
            android:background="@drawable/edit_text_selector"
            android:inputType="textEmailAddress"
            android:padding="12dp"/>

        <!-- Campo de Senha -->
        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:hint="Senha"
            android:background="@drawable/edit_text_selector"
            android:inputType="textPassword"
            android:padding="12dp"/>

        <!-- Botão principal de Login -->
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="14dp"
            android:text="Login"
            android:background="#1976D2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <!-- Botão de Login com Google -->
        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:text="Entrar com Google"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Link esqueceu a senha -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Esqueceu a senha?"
            android:textSize="14sp"
            android:textColor="#1976D2"
            android:gravity="center"/>

        <!-- Link de cadastro -->
        <TextView
            android:id="@+id/registerLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"
            android:text="Cadastre-se"
            android:textColor="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
